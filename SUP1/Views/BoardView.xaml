<UserControl
    x:Class="SUP.Views.BoardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:SUP.Views.Converters"
    xmlns:conv="clr-namespace:SUP.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SUP.Views"
    xmlns:m="clr-namespace:SUP.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SUP.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Focusable="True"
    IsTabStop="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:HasPancakeMonsterToImageConverter x:Key="HasPancakeMonsterToImageConverter" PancakeMonsterUri="/Assets/Icons/pancake-monster.png" />
        <conv:IsSuperCellToImageConverter x:Key="IsSuperCellToImageConverter" SuperCellUri="/Assets/Icons/staroutline.png" />
        <conv:TimerToBrushConverter x:Key="TimerToBrushConverter" />

    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding
            Key="NumPad7"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="0" />
        <KeyBinding
            Key="NumPad8"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="1" />
        <KeyBinding
            Key="NumPad9"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="2" />
        <KeyBinding
            Key="NumPad4"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="3" />
        <KeyBinding
            Key="NumPad5"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="4" />
        <KeyBinding
            Key="NumPad6"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="5" />
        <KeyBinding
            Key="NumPad1"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="6" />
        <KeyBinding
            Key="NumPad2"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="7" />
        <KeyBinding
            Key="NumPad3"
            Command="{Binding PressPadIndexCommand}"
            CommandParameter="8" />
    </UserControl.InputBindings>
    <Grid d:DataContext="{d:DesignInstance Type=vm:BoardViewModel, IsDesignTimeCreatable=False}" Background="#008e9b">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <StackPanel
                Width="359"
                Height="60"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Vertical">
                <StackPanel
                    Width="359"
                    Height="60"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Image
                        Width="44"
                        Height="44"
                        Margin="0,0,8,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Source="/Assets/Icons/timer_new.png"
                        Stretch="Uniform" />
                    <TextBlock
                        x:Name="Timer"
                        Width="221"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="50"
                        Foreground="{Binding IsTurnTimeCritical, Converter={StaticResource TimerToBrushConverter}}"
                        Text="{Binding TurnTime, FallbackValue=10:000, StringFormat=0}" />
                </StackPanel>
            </StackPanel>
        </Border>


        <StackPanel Grid.Row="1">

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                FontSize="50"
                Foreground="White"
                Text="{Binding StatusMessage, FallbackValue=FallbackMessage}" />

            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">

                    <Label
                        HorizontalAlignment="Center"
                        Content="Nickname X:"
                        FontSize="16"
                        Foreground="White" />
                    <TextBox
                        Width="200"
                        Height="30"
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Foreground="Black"
                        Text="{Binding PlayerXNickname, FallbackValue=FallbackNicknameX, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="0,0,0,30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="40"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding WinsX}" />
                </StackPanel>

                <!--  Höger kolumn  -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Nickname O:"
                        FontSize="16"
                        Foreground="White" />
                    <TextBox
                        Width="200"
                        Height="30"
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Foreground="Black"
                        Text="{Binding PlayerONickname, FallbackValue=FallbackNicknameO, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Margin="0,0,0,30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="40"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="{Binding WinsO}" />

                </StackPanel>
            </Grid>
            <Button
                Margin="0"
                Padding="20,10"
                HorizontalAlignment="Center"
                Background="White"
                Command="{Binding AddPlayersCommand}"
                Content="Spara nickname" />
        </StackPanel>

        <Viewbox
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform">
            <Grid Width="600" Height="600">
                <ItemsControl ItemsSource="{Binding Cells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" Rows="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Margin" Value="12" />
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding ClickCommand}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="IsEnabled" Value="{Binding DataContext.BtnIsEnabled, RelativeSource={RelativeSource AncestorType=ItemsControl}}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsWinningRow}" Value="True">
                                                <Setter Property="Background" Value="Gold" />
                                                <Setter Property="BorderBrush" Value="#FF1B1B1B" />
                                                <Setter Property="BorderThickness" Value="2" />
                                                <Setter Property="FontWeight" Value="Bold" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CellState}" Value="X">
                                                <Setter Property="IsHitTestVisible" Value="False" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CellState}" Value="O">
                                                <Setter Property="IsHitTestVisible" Value="False" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Grid>
                                    <Image
                                        Width="180"
                                        Height="180"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="{Binding IsSuperCell, Converter={StaticResource IsSuperCellToImageConverter}}"
                                        Stretch="Uniform" />
                                    <Image
                                        Width="128"
                                        Height="128"
                                        Source="{Binding CellState, Converter={StaticResource CellToImage}}"
                                        Stretch="Uniform" />
                                    <Image
                                        Width="128"
                                        Height="128"
                                        Source="{Binding HasPancakeMonster, Converter={StaticResource HasPancakeMonsterToImageConverter}}"
                                        Stretch="Uniform" />
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Viewbox>
        <Border
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,20,0,0"
            Background="#FF84C5CB">
            <StackPanel
                Margin="12"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="200"
                    Margin="20,0"
                    Padding="20,10"
                    Background="#008e9b"
                    Command="{Binding ShowStartCommand}"
                    Foreground="White">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="24"
                            Height="24"
                            Margin="0,0,8,0"
                            Source="/Assets/Icons/home.png"
                            Stretch="Uniform" />
                        <TextBlock VerticalAlignment="Center" Text="Avbryt" />
                    </StackPanel>
                </Button>
                <Button
                    Width="200"
                    Margin="20,0"
                    Padding="20,10"
                    Background="#008e9b"
                    Command="{Binding StartNewGameCommand}"
                    Foreground="White">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="24"
                            Height="24"
                            Margin="0,0,8,0"
                            Source="/Assets/Icons/person_edit.png"
                            Stretch="Uniform" />
                        <TextBlock VerticalAlignment="Center" Text="Byt spelare" />
                    </StackPanel>
                </Button>
                <Button
                    Width="200"
                    Margin="20,0"
                    Padding="20,10"
                    Background="#008e9b"
                    Command="{Binding RestartCommand}"
                    Foreground="White">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="24"
                            Height="24"
                            Margin="0,0,8,0"
                            Source="/Assets/Icons/restart.png"
                            Stretch="Uniform" />
                        <TextBlock VerticalAlignment="Center" Text="Spela igen" />
                    </StackPanel>
                </Button>
                <!--<Button
                    Width="250"
                    Margin="10"
                    Padding="20,10"
                    Background="LightBlue"
                    Command="{Binding EatCommand}"
                    Content="☠Opponent Eater Button☠"
                    IsEnabled="{Binding CanUseEat}" />-->
            </StackPanel>
        </Border>
    </Grid>
</UserControl>